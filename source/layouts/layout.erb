<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "No Place Film" %></title>
    
    <%= stylesheet_link_tag "normalize", "all", "bootstrap.min", "magnific-popup" %>
    <%= javascript_include_tag  "all", "jquery-2-0", "bootstrap.min", "jquery.magnific-popup", "jquery.magnific-popup.min"%>
  </head>
  <body class="page_classes">
      <header class="text-center">
        <div class="banner container col-lg-12">
          <%= image_tag 'no-place-banner-no-text.jpg', :class => 'img-responsive logo-banner', :alt => "No Place" %>
        </div>
          <nav class="navbar navbar-default navbar-static-top navbar-primary" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="container col-lg-12">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
              <ul class="nav navbar-nav">
                <li><a href="#story">Story</a></li>
                <li><a href="#cast">Cast</a></li>
                <li><a href="#crew">Crew</a></li>
                <li><a href="#gallery">Gallery</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
               <li><a href="http://www.facebook.com/noplacemovie" target="_blank">Like us</a></li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div>
          </nav>

        
      </header>
      <%= yield %>

   

